@model LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<h1>Login</h1>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form method="post" asp-controller="Home" asp-action="Login">
    <div class="form-group row">
        <div class="col-sm-2"><label>Username:</label></div> <div class="col-sm-4">
            <input asp-for="EmailAddress" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="EmailAddress" class="text-danger"></span>
        </div>
    </div> <div class="form-group row">
        <div class="col-sm-2"><label>Password:</label></div> <div class="col-sm-4">
            <input type="password" asp-for="Password" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="offset-2 col-sm-4">
            <button type="submit" class="btn btn-primary">Log In</button>
        </div>
    </div> <div class="row">
        <div class="offset-2 col-sm-4">
            Not registered?
            <a asp-controller="Home" asp-action="Index">Register as a new user</a>
        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

